# Your Gemini API key (project-wide, shared across users)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Your GitHub token (increases rate limit)
GITHUB_TOKEN=your_github_token_here

# Encryption key for user API keys (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=64_character_hex_string_here

# Cron job authentication secret (prevent unauthorized cron triggers)
CRON_SECRET=random_secret_string_here

# Database connection (automatically set by Vercel when you add Postgres)
POSTGRES_URL=postgres://...
POSTGRES_PRISMA_URL=postgres://...
POSTGRES_URL_NON_POOLING=postgres://...

# Redis connection (automatically set by Vercel when you add Upstash Redis)
UPSTASH_REDIS_REST_URL=https://...
UPSTASH_REDIS_REST_TOKEN=...
